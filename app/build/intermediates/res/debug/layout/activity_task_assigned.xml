<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#fff"
    tools:context="my.carfix.carfix.activity.TaskAssignedActivity">

    <my.carfix.carfix.TypefacedTextView android:id="@+id/text_view"
        android:text="Task Assigned\n\nCase No:\nVehicle Reg. No.:\nVehicle Model:\nPhone No:\nService:\nAddress:\n"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_margin="20dp"
        app:fontStyle="helvetica_neue_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

    <my.carfix.carfix.TypefacedButton android:id="@+id/acceptTask"
        android:text="Accept Job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/buttonshape"
        android:textColor="#ffffff"
        app:fontStyle="helvetica_neue_light"/>

    <View android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"/>

    <my.carfix.carfix.TypefacedButton android:id="@+id/rejectTask"
        android:text="Reject Job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/buttonshape"
        android:textColor="#ffffff"
        app:fontStyle="helvetica_neue_light"/>

    </LinearLayout>
</RelativeLayout>
