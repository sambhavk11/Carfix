<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="my.carfix.carfix.activity.Login">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/regPageNameFirst"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/regPageNameLast"
        android:layout_below="@+id/regPageNameFirst"
        android:layout_alignRight="@+id/regPageNameFirst"
        android:layout_alignEnd="@+id/regPageNameFirst"
        android:hint="Last Name" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageLoad"
        android:layout_alignLeft="@+id/regPageNameFirst"
        android:layout_alignStart="@+id/regPageNameFirst"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/regPageNameFirst"
        android:layout_alignEnd="@+id/regPageNameFirst"
        android:layout_above="@+id/regPageNameFirst"
        android:src="@drawable/imhere" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver"
        android:id="@+id/switch1"
        android:checked="false"
        android:layout_below="@+id/regPageNameLast"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
